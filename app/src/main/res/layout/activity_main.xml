<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <View
        android:id="@+id/view_phrases_menu"
        android:layout_width="wrap_content"
        android:background="@color/purple"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_height="72dp"/>
    
    <ImageView
        app:tint="@color/black"
        android:id="@+id/image_all"
        android:src="@drawable/ic_all"
        android:layout_marginStart="32dp"
        android:layout_alignTop="@id/view_phrases_menu"
        android:layout_alignBottom="@id/view_phrases_menu"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <ImageView
        app:tint="@color/black"
        android:id="@+id/image_happy"
        android:src="@drawable/ic_happy"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/view_phrases_menu"
        android:layout_alignBottom="@id/view_phrases_menu"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <ImageView
        app:tint="@color/black"
        android:id="@+id/image_sunny"
        android:src="@drawable/ic_sunny"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:layout_alignTop="@id/view_phrases_menu"
        android:layout_alignBottom="@id/view_phrases_menu"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <TextView
        android:id="@+id/text_name"
        android:layout_below="@id/view_phrases_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="Olá, usuário!"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_phrase"
        android:layout_centerInParent="true"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nunc viverra id dui elementum molestie"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    
    <View
        android:layout_below="@id/text_phrase"
        android:layout_width="128dp"
        android:layout_centerHorizontal="true"
        android:background="@color/purple"
        android:layout_marginTop="16dp"
        android:elevation="5dp"
        android:layout_height="4dp" />

    <Button
        android:id="@+id/button_new_phrase"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="Nova Frase"
        android:backgroundTint="@color/purple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>